{
    "compilerOptions": {
        "module": "es2022",
        "moduleResolution": "node",
        "target": "ESNext",
        "noImplicitAny": true,
        "strict": true,
        "typeRoots": ["node_modules/@types"],
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "rootDir": ".",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "exclude": ["./node_modules"],
    "include": ["./**/*"]
}
